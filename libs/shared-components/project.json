{
  "name": "shared-components",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/shared-components/src",
  "prefix": "ng-mf",
  "tags": ["scope:shared", "scope:design", "type:lib"],
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/angular:ng-packagr-lite",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "libs/shared-components/ng-package.json",
        "tailwindConfig": "libs/shared-components/tailwind.config.js"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/shared-components/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/shared-components/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/shared-components/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "libs/shared-components/**/*.ts",
          "libs/shared-components/**/*.html",
          "libs/shared-components/package.json"
        ]
      }
    }
  }
}
